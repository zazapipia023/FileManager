<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.zaza.filemanager.controller.Controller">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" />
        </Menu>
    </MenuBar>

    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftPanel" source="panel.fxml" HBox.hgrow="ALWAYS" />
        <fx:include fx:id="rightPanel" source="panel.fxml" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox spacing="5">
        <Button maxWidth="Infinity" text="Copy File" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Paste file" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Delete file" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Exit" HBox.hgrow="ALWAYS" onAction="#btnExitAction" />
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>

</VBox>
